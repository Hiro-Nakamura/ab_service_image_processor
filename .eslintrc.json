{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
	    "no-console": 0,
        "arrow-parens": [ "warn", "always" ],
        "indent": [
            "warn",
            4,
            { 
	            "MemberExpression": "off", 
	            "SwitchCase": 1
	        }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-trailing-spaces": [
	        "warn",
	        { 
		        "skipBlankLines": true,
		        "ignoreComments": true
		    }
	    ],
        "semi": [
            "error",
            "always"
        ],
        "newline-per-chained-call": [
	        "warn",
	        { "ignoreChainWithDepth": 2 }
	    ],
	    "block-spacing": [ "error", "always" ],
	    "prettier/prettier": 0
    }
}